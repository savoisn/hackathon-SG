{
  "name": "expense",
  "plural": "expenses",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "number",
      "id": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "amount": {
      "type": "number",
      "required": true
    },
    "settled": {
      "type": "boolean",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "payer": {
      "type": "belongsTo",
      "model": "sguser",
      "foreignKey": "PayerId"
    },
    "recipients": {
      "type": "hasMany",
      "model": "sguser",
			"through": "ExpenseRecipient",
      "foreignKey": "expenseId"
    },
    "project": {
      "type": "belongsTo",
      "model": "project",
      "foreignKey": "projectId"
    }
  },
  "acls": [],
  "methods": {}
}
